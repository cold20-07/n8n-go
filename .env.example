# N8N Workflow Generator Configuration

# Application Settings
DEBUG=false
SECRET_KEY=your-secret-key-here
FLASK_ENV=production

# API Keys
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
CLAUDE_API_KEY=your-claude-api-key-here

# AI Provider Settings
AI_PROVIDER_PRIORITY=gemini,openai,claude
AI_COST_THRESHOLD=1.0
AI_CACHE_ENABLED=true
AI_FALLBACK_ENABLED=true

# Workflow Generation Settings
MAX_WORKFLOW_NODES=20
DEFAULT_COMPLEXITY=medium
ENABLE_AI_GENERATION=true

# Rate Limiting
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_PER_MINUTE=10

# Rate Limiting per Endpoint (optional overrides)
GENERATE_RATE_LIMIT=10 per minute
PROMPT_HELP_RATE_LIMIT=20 per minute
VALIDATE_RATE_LIMIT=30 per minute
PREVIEW_RATE_LIMIT=50 per minute

# Database (if needed)
DATABASE_URL=sqlite:///workflows.db

# Cache Settings
REDIS_URL=redis://localhost:6379/0
CACHE_TIMEOUT=3600
ENABLE_CACHING=true

# Security
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
ENABLE_CSRF=true

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=false