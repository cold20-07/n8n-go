# Development Environment Configuration

# Flask Settings
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production

# Server Settings
HOST=127.0.0.1
PORT=5000

# AI Provider Settings (Development)
GEMINI_API_KEY=your-dev-gemini-api-key
OPENAI_API_KEY=your-dev-openai-api-key
CLAUDE_API_KEY=your-dev-claude-api-key
OLLAMA_BASE_URL=http://localhost:11434

# Rate Limiting (Relaxed for development)
RATE_LIMIT_ENABLED=False
RATE_LIMIT_STORAGE_URL=memory://

# Caching (Local for development)
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/n8n_generator_dev.log

# CORS (Permissive for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000,http://127.0.0.1:5000

# Database (if using)
DATABASE_URL=sqlite:///dev_database.db

# Security (Relaxed for development)
SECURITY_HEADERS_ENABLED=False
CSP_ENABLED=False

# Features
ENABLE_TEMPLATES=True
ENABLE_VALIDATION=True
ENABLE_AI_FALLBACK=True